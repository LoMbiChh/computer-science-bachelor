#include <iostream>
using namespace std;

bool isPalindrome(int array[], int length) {
	for (int i = 1; i <= length; i++) {
		if (array[i] == array[length - 1]) {

		}
	}
}

int main() {
	int l;
	cout << "Insert the length: ";
	cin >> l;

	int a[l];
	for (int i = 0; i < length; i++) {
		int x;
		cout << "Insert a number: ";
		cin >> x;
		array[i] = x;
	}

	isPalindrome(a, l);

	return 0;
}
